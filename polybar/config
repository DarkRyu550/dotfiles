[colors] ; Palette settings
background		= #111		; Background
middleground	= #646464	; Background text
foreground		= #abefab	; Foreground text
selected		= #2e2		; Selected foreground text
unselected		= #6a6		; Not selected foreground text

[global/wm]
margin-top = 6

[module/clock]
type		= internal/date
interval 	= 1 ; TODO: Maybe change this later

time		= "%H:%M"
label 		= " %time%" 

[module/i3]
type = internal/i3

format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

underline-size = 4

label-focused-background = #222
label-focused-underline  = #2e2
label-focused-underline-size = 4

label-focused-padding    = 2
label-unfocused-padding  = 2

; Workaround for centering full-width icon characters properly
label-focused   = "%name%"
label-unfocused = "%name%" 

[module/mem]
type = internal/memory
interval = 1

label = " %percentage_used%%"

[module/window_title]
type = internal/xwindow

label-maxlen   = 60
label-ellipsis = true

[module/music]
type = internal/mpd

format-online = <label-song> <label-time> <icon-prev> <toggle> <icon-next>

label-song = %title%, by %artist%
label-time = (%elapsed% / %total%)
; Icons
icon-play  = %{F#fff}%{F-}
icon-pause = %{F#fff}%{F-}
icon-prev  = %{F#fff}%{F-}
icon-next  = %{F#fff}%{F-}

; Progress bar settings
bar-progress-width = 20
bar-progress-empty = －
bar-progress-fill  = －
bar-progress-indicator = ◉

[module/wifi-wlp4s0]
type = internal/network
interface = wlp4s0

label-connected =  %local_ip% @ %essid%

[bar/base]
background = #111
foreground = #abefab

; Always favor absolute center over relative center
fixed-center = true

; Create the illusion of bar offset by
; adding an invisible border
border-left-size = 10%
border-right-size = 10%

border-color = #0000

; Font settings
font-0 = Noto Sans Mono:size=9;2
font-1 = FontAwesome:size=9;2
font-2 = WunconSiji:size=9;2
font-3 = Source Han Sans:size=9;2

padding = 2

module-margin 	= 1%

[bar/top]
inherit = bar/base
border-top-size = 6

bottom = false

modules-left  	= 
modules-center	= window_title
modules-right	= wifi-wlp4s0 mem clock

[bar/bottom]
inherit = bar/base
border-bottom-size = 6

bottom = true

modules-left = i3
modules-right = music
