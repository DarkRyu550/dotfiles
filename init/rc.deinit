#!/bin/bash
# Deinitializes system services and runs deinit scripts,
# before PID 1 terminates all proecessess.

[ ! "$PPID" -eq "1" ] && echo This script must only be run by PID 1 && exit 1

printf "\n\n"
echo [rc.deinit] -- GOING DOWN!
printf "\n"

# Run deinit scripts
echo -- scripts
for script in /init/deinit.d/*; do
	[ ! -x "$script" ] && continue
	echo -- running $script
	$script
done


